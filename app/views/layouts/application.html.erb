<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<%= render 'layouts/nav' %>

<% if params[:id] != nil %>
<% @url = '/user/' + params[:id] %>
    <% if current_page?(@url) %>
        		<img src="/cover.jpeg" class='profile-banner'></img>
            <div class='row'>
              <div class='col-sm-12' style='background-color: white;'>
                  <div class="container">
                    <div class="col-sm-3">&nbsp;</div>
                    <div class="col-sm-6" style="margin-top: 5px;">
                      <div class="col-sm-2" style="font-size: 80%; opacity: 0.7;">TWEETS<br>
								          <h6 style="color: #0084b4; font-size: 100%; opacity: 1.2;"><%= User.find_by_username(params[:id]).posts.count  %></h6></div>
                      <div class="col-sm-2" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
								          <h6 style="color: #0084b4; font-size: 100%; opacity: 1.2;"><%= User.find_by_username(params[:id]).followers.count  %></h6></div>
                    <% if user_signed_in? %>
                      <div class="col-sm-8" style="text-align: right; margin-top: 5px;"><a href="/user/edit"><li type="button" class="btn btn-defult" style="color: grey; opacity: 8.8; font-weight: bold;">EDIT PROFILR</li></a></div>
                    <% end %>
                    </div>
                  </div>
              </div>
            </div>
    <% end %>
  <% end %>
      <div class="container">
        <span class="notice"><%= notice %></span>
        <span class="alert"><%= alert %></span>

        <%= yield %>
      </div>
  </body>
</html>
